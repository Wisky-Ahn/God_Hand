# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/godhand_bot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=godhand_bot
DB_USER=godhand_admin
DB_PASSWORD=your_secure_password_here

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Raspberry Pi Optimization
OPTIMIZATION_MODE=raspberry_pi
MAX_MEMORY=400MB
CLEANUP_INTERVAL=3600000

# Music System
YOUTUBE_DL_PATH=/usr/local/bin/youtube-dl
FFMPEG_PATH=/usr/local/bin/ffmpeg
MUSIC_CACHE_SIZE=100MB

# Season Configuration
SEASON_DURATION_DAYS=14
SEASON_RESET_DAY=0
SEASON_RESET_HOUR=0

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Discord Voice Configuration
DISCORD_VOICE_ENCRYPTION=tweetnacl

# Scoring Configuration
# Voice Activity Scoring
VOICE_SOLO_POINTS_PER_MINUTE=0.1
VOICE_MULTI_POINTS_PER_MINUTE=2.0
VOICE_MIN_SESSION_DURATION=30

# Voice Enhancement Scoring  
VIDEO_ENABLED_POINTS=3
SCREEN_SHARE_POINTS=5
GO_LIVE_POINTS=8

# Message Activity Scoring
MESSAGE_BASE_POINTS=0.15
MESSAGE_MAX_QUALITY_BONUS=0.35

# Reaction Activity Scoring
REACTION_GIVE_POINTS=0.1
REACTION_RECEIVE_POINTS=0.2

# Streaming Activity Scoring
STREAMING_SESSION_START_POINTS=8
STREAMING_QUALITY_LOW_BONUS=0
STREAMING_QUALITY_MEDIUM_BONUS=2
STREAMING_QUALITY_HIGH_BONUS=4

# Time Weight Configuration
TIME_WEIGHT_DAWN=0.2
TIME_WEIGHT_MORNING=0.8
TIME_WEIGHT_DAY=1.0
TIME_WEIGHT_EVENING=1.4
TIME_WEIGHT_LATE_NIGHT=0.6

# Message Length and Content Scoring
MESSAGE_LENGTH_SHORT_THRESHOLD=20
MESSAGE_LENGTH_MEDIUM_THRESHOLD=50
MESSAGE_LENGTH_LONG_THRESHOLD=100
MESSAGE_LENGTH_SHORT_BONUS=0.1
MESSAGE_LENGTH_MEDIUM_BONUS=0.1
MESSAGE_LENGTH_LONG_BONUS=0.1
MESSAGE_CODE_BLOCK_BONUS=0.1
MESSAGE_LINK_BONUS=0.1
MESSAGE_ATTACHMENT_BONUS=0.2
MESSAGE_MENTION_BONUS=0.05
MESSAGE_EMOJI_BONUS=0.05
MESSAGE_THREAD_STARTER_BONUS=0.15
REACTION_SELF_PENALTY=0.0

# Time Boundary Settings
TIME_DAWN_START=0
TIME_DAWN_END=6
TIME_MORNING_START=6
TIME_MORNING_END=9
TIME_DAY_START=9
TIME_DAY_END=18
TIME_EVENING_START=18
TIME_EVENING_END=23
TIME_LATE_NIGHT_START=23
TIME_LATE_NIGHT_END=24
